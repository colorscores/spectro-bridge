{
  "name": "spectro-bridge",
  "version": "1.0.0",
  "description": "Electron bridge for spectrophotometer device communication",
  "main": "main.js",
  "author": "ColorScores",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mallomaRX7/spectro-bridge.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "postinstall": "electron-builder install-app-deps",
    "generate-cert": "node scripts/generate-cert.js",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "test": "jest"
  },
  "dependencies": {
    "ws": "^8.14.2",
    "usb": "^2.9.0",
    "electron-store": "^8.1.0",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.colorscores.spectro-bridge",
    "productName": "Spectro Bridge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      },
      {
        "from": "certs",
        "to": "certs",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "mallomaRX7",
      "repo": "spectro-bridge"
    }
  }
}
