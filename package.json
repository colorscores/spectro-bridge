{
  "name": "spectro-bridge",
  "version": "1.0.0",
  "description": "Electron bridge for spectrophotometer device communication",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2",
    "usb": "^2.9.0",
    "electron-store": "^8.1.0",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.spectro.bridge",
    "productName": "Spectro Bridge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "renderer/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
